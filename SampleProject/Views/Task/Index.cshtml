@model List<SampleProject.DTO.Task>

@{
    ViewData["Title"] = "Task List";
}

<partial name="_Notification" />
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Task</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Task</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h5 class="m-0">Task List</h5>
                        </div>
                        <div class="card-body">

                            <a asp-action="Create" class="btn btn-sm btn-primary">Create New Task</a>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Task Name</th>
                                        <th>Task Type</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>@item.TaskID</td>
                                            <td>@item.TaskName</td>
                                            <td>@item.TaskType</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.TaskID" class="btn btn-sm btn-secondary">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.TaskID" class="btn btn-sm btn-success">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.TaskID" class="btn btn-sm btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
