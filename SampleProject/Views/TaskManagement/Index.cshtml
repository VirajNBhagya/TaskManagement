@model List<SampleProject.DTO.TaskManagement>

@{
    ViewData["Title"] = "Task Management List";
}

<partial name="_Notification" />
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Task Management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Task Management</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h5 class="m-0">Task Management List</h5>
                        </div>
                        <div class="card-body">

                            <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Task Name</th>
                                        <th>Employee Name</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>@item.TaskManagementID</td>
                                            <td>@item.TaskName</td>
                                            <td>@item.EmployeeName</td>
                                            <td>@item.TDate.ToShortDateString()</td>
                                            <td>@item.TTime.ToShortTimeString()</td>
                                            <td>@item.Status</td>
                                            
                                                @if (@item.Status == "Completed")
                                                {
                                                <td><h6 class="text-success">Completed</h6></td>
                                                }
                                                else
                                                {
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.TaskManagementID" class="btn btn-sm btn-secondary">Edit</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.TaskManagementID" class="btn btn-sm btn-danger">Delete</a> |
                                                    <a asp-action="TaskCompletion" asp-route-id="@item.TaskManagementID" class="btn btn-sm btn-success">Mark as Completed</a> 
                                                </td>
                                                }
                                            

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
