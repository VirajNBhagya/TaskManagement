@model SampleProject.Models.TaskManagement.CompleteTMViewModel

@{
    ViewData["Title"] = "Completion TM";
}
<partial name="_Notification" />
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Task Management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Task Management</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h5 class="m-0">Complete Task Management</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="m-0">Are you sure Complete this Task</h5>
                            <hr />
                            <form asp-action="TaskCompletion" method="post" autocomplete="off">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="mb-3">
                                    <label asp-for="TaskManagementID" class="form-label">Task Management ID</label>
                                    <input type="text" class="form-control" asp-for="TaskManagementID" asp-route-id="@Model.TaskManagementID" readonly />
                                    <span asp-validation-for="TaskManagementID" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="TaskName" class="form-label">Task Name</label>
                                    <select asp-for="TaskName" class="form-control" asp-items="@ViewBag.TaskList">
                                        <option>Select a Task</option>
                                    </select>
                                    <span asp-validation-for="TaskName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="EmployeeName" class="form-label">Employee Name</label>
                                    <select asp-for="EmployeeName" class="form-control" asp-items="@ViewBag.EmployeeList">
                                        <option>Select a Employee</option>
                                    </select>
                                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-sm btn-success">Complete This Task</button> ||
                                <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

